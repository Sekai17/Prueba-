function generateBugReport({
  title,
  description,
  steps,
  expected,
  actual,
  impact,
  device,
  os,
  appVersion,
  model,
  attachments = [],
  extraInfo = ""
}) {
  return `
[BUG REPORT]

**Title:** ${title}

**Description:**
${description}

**Steps to Reproduce:**
${steps.map((s, i) => `${i + 1}. ${s}`).join("\n")}

**Expected Result:**
${expected}

**Actual Result:**
${actual}

**Impact:**
${impact}

**Environment:**
- Device: ${device}
- OS: ${os}
- App Version: ${appVersion}
- Model: ${model}

**Attachments:**
${attachments.length ? attachments.join("\n") : "(none)"}

**Extra Info:**
${extraInfo || "(none)"}

---
Generated by Sekai's Auto Bug Reporter
`;
}

// Example usage:
